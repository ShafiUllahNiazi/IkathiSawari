<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/available_driver_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/available_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Shafi Ullah Khan"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/available_driver_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/available_driver_age_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="22/ Male"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/available_driver_image"
            app:layout_constraintTop_toBottomOf="@+id/available_driver_name" />

        <TextView
            android:id="@+id/available_driver_vehicle_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Bua 61632"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/available_driver_image"
            app:layout_constraintTop_toBottomOf="@+id/available_driver_age_gender" />

        <TextView
            android:id="@+id/available_driver_offered_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Offered 4 seats"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/available_driver_image"
            app:layout_constraintTop_toBottomOf="@+id/available_driver_vehicle_model" />

        <TextView
            android:id="@+id/available_driver_ride_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="18 april 2019 4:30"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/available_driver_image"
            app:layout_constraintTop_toBottomOf="@+id/available_driver_offered_seats" />


        <LinearLayout
            android:id="@+id/container_seats"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@color/light_red"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/available_driver_ride_date">

            <TextView
                android:id="@+id/available_driver_available_seats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4 Seats Available"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/available_driver_price_of_ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Price"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/availableDriverSendRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_seats"
            android:background="@android:color/black"
            android:text="Send Request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>





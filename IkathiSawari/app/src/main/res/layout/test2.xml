<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"
    app:cardElevation="3dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driver_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_home_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/passenger_requested_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:text="Shafi Ullah Khan"
            app:layout_constraintStart_toEndOf="@+id/driver_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/driver_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="8dp"
            android:text="22/ Male"
            app:layout_constraintStart_toEndOf="@+id/driver_image"
            app:layout_constraintTop_toBottomOf="@+id/passenger_requested_name" />

        <TextView
            android:id="@+id/driver_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:text="Bua 61632"
            app:layout_constraintStart_toEndOf="@+id/driver_image"
            app:layout_constraintTop_toBottomOf="@+id/driver_age" />

        <TextView
            android:id="@+id/driver_offered_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:text="Offered 4 seats"
            app:layout_constraintStart_toEndOf="@+id/driver_image"
            app:layout_constraintTop_toBottomOf="@+id/driver_car_model" />

        <TextView
            android:id="@+id/driver_date"
            android:layout_width="103dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:text="18 april 2019 4:30"
            app:layout_constraintStart_toEndOf="@+id/driver_image"
            app:layout_constraintTop_toBottomOf="@+id/driver_offered_seats" />

        <LinearLayout
            android:id="@+id/container_seats"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/light_red"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/driver_date"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/available_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4 Seats Available"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/price_per_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="156 / seat"
                android:textSize="12sp" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>